extends ../layout/main

block variables
	-var { data } = htmlWebpackPlugin.options
	-var wrapperClass = 'wrapper'
	-var pageClass = ''
	-var description = ''
	-var page = data.name


block title
	title= page
block description
	meta(name="description", content=description)

prepend css

block header
	include ../includes/modules/header

prepend body

block content
	main.content
		.container
			h1
				| #{page}
			include ../includes/templates/about.html
			.swiper.test
				.swiper-wrapper
					-for(var i=0; i < 10; i++)
						.swiper-slide
							a(href="images/c" + (i+1) + ".jpg" data-fancybox="gallery")
								picture
									source(data-srcset="images/c" + (i+1) + ".webp 1x, images/c" + (i+1) + ".webp 2x" type="image/webp")
									source(data-srcset="images/c" + (i+1) + ".jpg 1x, images/c" + (i+1) + ".jpg 2x" type="image/jpeg")
									img.img-fluid.js-lazy(data-src="images/c" + (i+1) + ".jpg" src="data:image/webp;base64,UklGRjoAAABXRUJQVlA4IC4AAACyAgCdASoCAAIALmk0mk0iIiIiIgBoSygABc6WWgAA/veff/0PP8bA//LwYAAA" alt="" width="1920" height="1080")
			#app2
				| {{message}}
				example-component



